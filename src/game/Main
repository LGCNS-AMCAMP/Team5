import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        GameManagement gameManagement = new GameManagement();
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.println("\n===== 게임 관리 프로그램 =====");
            System.out.println("1. 게임 검색");
            System.out.println("2. 저장된 게임 목록 보기");
            System.out.println("3. 리뷰 추가하기");
            System.out.println("4. 리뷰 보기");
            System.out.println("5. 리뷰 수정");
            System.out.println("6. 게임 삭제");
            System.out.println("7. 인기 게임 보기 (평점 순)");
            System.out.println("8. 종료");
            System.out.print("메뉴를 선택하세요: ");

            int choice = scanner.nextInt();
            scanner.nextLine(); // 버퍼 비우기

            switch (choice) {
                case 1:
                    gameManagement.searchGames(scanner);
                    break;
                case 2:
                    gameManagement.listSavedGames();
                    break;
                case 3:
                    gameManagement.addReview(scanner);
                    break;
                case 4:
                    gameManagement.viewReviews();
                    break;
                case 5:
                    gameManagement.updateReview(scanner); // 리뷰 수정
                    break;
                case 6:
                    gameManagement.deleteGame(scanner); // 게임 삭제
                    break;
                case 7:
                    gameManagement.viewPopularGames(); // 인기 게임 보기
                    break;
                case 8:
                    System.out.println("프로그램을 종료합니다.");
                    scanner.close();
                    return;
                default:
                    System.out.println("잘못된 입력입니다. 다시 시도하세요.");
            }
        }
    }
}

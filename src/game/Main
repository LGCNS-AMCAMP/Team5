import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        GameManagement gameManagement = new GameManagement(scanner);

        while (true) {
            System.out.println("\n===== 게임 관리 프로그램 =====");
            System.out.println("1. 게임 추가");
            System.out.println("2. 저장된 게임 목록 보기");
            System.out.println("3. 게임 삭제");
            System.out.println("4. 게임 검색");
            System.out.println("5. 종료");
            System.out.print("메뉴를 선택하세요: ");

            String choice = scanner.nextLine().trim();

            switch (choice) {
                case "1":
                    gameManagement.addGame(); // 게임 추가
                    break;
                case "2":
                    gameManagement.listSavedGames(); // 저장된 게임 목록 보기
                    break;
                case "3":
                    gameManagement.deleteGame(); // 게임 삭제
                    break;
                case "4":
                    gameManagement.searchGames(); // 게임 검색
                    break;
                case "5":
                    System.out.println("프로그램을 종료합니다.");
                    scanner.close();
                    return;
                default:
                    System.out.println("잘못된 입력입니다. 다시 시도하세요.");
            }
        }
    }
}
